<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <gradient
                android:angle="45"
                android:startColor="#FF42A5F5"
                android:endColor="#FF1565C0" />
            <stroke
                android:width="3dp"
                android:color="#FF0D47A1" />
        </shape>
    </item>
    <item android:gravity="center">
        <shape android:shape="oval">
            <size
                android:width="18dp"
                android:height="18dp" />
            <solid android:color="#FFE3F2FD" />
        </shape>
    </item>
</layer-list>
